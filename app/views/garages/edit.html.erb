<form action="/garages/<%=@garage.id%>" method="post">
  <input type="hidden" name="authenticity_token" value="<%= form_authenticity_token %>">
  <input type="hidden" name="_method" value="PATCH" />
  <h3>Edit Garage <%=@garage.id%></h3>
  <p>Indoor:</p>
  <input type='radio' name='garage[indoor]' value =true id = "option1" required <%= @garage.indoor ? "checked":"" %>/>
  <label for ="option1">True</label>
  <input type='radio' name='garage[indoor]' value =false id = "option2" required <%= !@garage.indoor ? "checked":"" %>/>
  <label for ="option1">False</label>
  <br><br>
  <label>Slots:</label>
  <input type='number' id="slots" placeholder="Integers" name='garage[slots]' value="<%=@garage.slots%>" required><br><br>
  <label>City:</label>
  <input type='text' id="city" placeholder="Los Angeles" name='garage[city]' value="<%=@garage.city%>" required><br><br>
  <label>Zipcode:</label>
  <input type='text' id="zipcode" placeholder="90017" name='garage[zipcode]' size = "5" maxlength="5" value="<%=@garage.zipcode%>" required><br><br>
  <label>Name:</label>
  <input type='text' id="name" placeholder="Garage Name" name='garage[name]' value="<%=@garage.name%>" required><br><br>

  <input id ="confirm_edit" type='submit' value="Submit"/>
</form>
<br>
<span><a href="/garages/<%=@garage.id%>">Back</a></span>